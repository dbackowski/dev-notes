<div class="row">
  <div class="span12">
    <h2><%= @note.title %></h2>
    <p>
      <b>Category:</b>
      <%= @note.category.name %>
    </p>
    <p>
      <b>Public Visible:</b>
      <% if @note.public_visible %>
        <span class="label important">Yes</span>
      <% else %>  
        <span class="label">No</span>
      <% end %>
    </p>
    <p>
      <%= pretty_print @note.description %>
    </p>
  </div>
  <div class="span4">
    <h4>Added by:</h4>
    <p>
      <%= image_tag @note.user.get_gravatar_path, :width => 64, :height => 64 %>
    </p>
    <p>
      <%= @note.user.full_name %>
    </p>
    <% if @logged_user.present? && (@logged_user.id == @note.add_user_id || is_admin?)%>
      <%= link_to 'Edit note', edit_note_path(@note), :class => 'btn primary small' %>
      <%= link_to 'Destroy note', @note, :confirm => 'Are you sure?', :method => :delete, :class => 'btn danger small' %>
    <% end %>
  </div>
</div>

