      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :category_id %>
    <div class="input">
      <%= f.select :category_id, @categories.map{|o| [o.name, o.id]} %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :title %>
    <div class="input">
      <%= f.text_field :title, :class => 'span9' %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :description %>
    <div class="input">
      <%= f.text_area :description, :class => 'span9' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
