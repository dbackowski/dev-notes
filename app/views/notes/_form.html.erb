<%= form_for @note, :html => {:class => 'form-horizontal'} do |f| %>
  <%= error_messages_for :note %>
  <div class="control-group">
    <%= f.label :category_id %>
    <div class="controls">
      <%= f.select :category_id, @categories.map{|o| [o.name, o.id]} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :public_visible %>
    <div class="controls">
      <%= f.check_box :public_visible %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title %>
    <div class="controls">
      <%= f.text_field :title, :class => 'span10' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description %>
    <div class="controls">
      <%= f.text_area :description, :class => 'span10', :id => 'textile' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit 'Save', :class => 'btn btn-primary' %>
    <%= f.submit 'Cancel', :value => 'cancel', :class => 'btn' %>
  </div>
<% end %>
