<%= form_for [:admin, @category] do |f| %>
  <%= error_messages_for :category %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit 'Save', :class => 'btn primary small' %>
    <%= f.submit 'Cancel', :value => 'cancel', :class => 'btn small' %>
  </div>
<% end %>
