<h2>User info</h2>

<p>
  <%= image_tag @user.get_gravatar_path, :width => 64, :height => 64 %>
</p>

<p>
  <b>Login:</b>
  <%= @user.login %>
</p>

<p>
  <b>First name:</b>
  <%= @user.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @user.last_name %>
</p>

<p>
  <b>E-mail:</b>
  <%= @user.email %>
</p>

<p>
  <b>Admin:</b>
  <% if @user.admin %>
    <span class="label success">Yes</span>
  <% else %>  
    <span class="label">No</span>
  <% end %>
</p>
