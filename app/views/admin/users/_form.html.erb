<%= form_for [:admin, @user] do |f| %>
  <%= error_messages_for :user %>

  <div class="clearfix">
    <%= f.label :login, 'Login' %>
    <div class="input">
      <%= f.text_field :login %>
    </div>
  </div>

  <% if @user.new_record? %>
    <div class="clearfix">
      <%= f.label :passwd, 'Password' %>
      <div class="input">
        <%= f.password_field :passwd %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :passwd_confirmation, 'Password confirmation' %>
      <div class="input">
        <%= f.password_field :passwd_confirmation %>
      </div>
    </div>
  <% end %>
  
  <div class="clearfix">
    <%= f.label :first_name, 'First name' %>
    <div class="input">
      <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :last_name, 'Last name' %>
    <div class="input">
      <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :email, 'E-mail' %>
    <div class="input">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :admin, 'Admin role' %>
    <div class="input">
      <%= f.check_box :admin %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Save', :class => 'btn primary small' %>
    <%= f.submit 'Cancel', :value => 'cancel', :class => 'btn small' %>
  </div>
<% end %>
